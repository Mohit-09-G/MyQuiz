<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/more_dark_green"
    tools:context=".Notification.NotificationsFragment">

   <LinearLayout
       android:background="@color/Medium_green"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="16dp">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          app:cardCornerRadius="20dp"
          app:cardElevation="10dp">

         <LinearLayout
             android:background="@color/more_dark_green"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/slide1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="PLAY THE MATCH AND TRY YOUR LUCK"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />

         </LinearLayout>

      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:cardCornerRadius="20dp"
          android:layout_marginBottom="16dp"
          app:cardElevation="10dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/more_dark_green"
             android:orientation="horizontal"
             android:padding="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/slide2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONEY AND PLAY"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="8dp"
                android:layout_gravity="center_vertical" />

         </LinearLayout>

      </androidx.cardview.widget.CardView>

   </LinearLayout>

</FrameLayout>
