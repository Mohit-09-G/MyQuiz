<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/more_dark_green"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".Login.IntroPage">
<TextView
    android:layout_width="match_parent"
    android:padding="20dp"
    android:textStyle="italic"
    android:layout_marginTop="28dp"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="25sp"
    android:text="Welcome to the"/>
    <TextView
    android:layout_width="match_parent"
    android:padding="20dp"
        android:layout_marginTop="50dp"
    android:textStyle="italic"
    android:layout_height="wrap_content"
    android:textColor="@color/Medium_green"
    android:textSize="30sp"
    android:text="My Quiz"/>
    <RelativeLayout
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/mainlogo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/slogan1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/Dark_green"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo"
                    android:text="My Quiz" />

                <TextView

                    android:id="@+id/slogan2"
                    android:textColor="@color/Dark_green"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slogan1"
                    android:layout_marginTop="8dp"
                    android:text="Master Your Finances, Unlock Your Potential" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/slogan"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="380dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/Medium_green"
           android:textColor="@color/white"
            android:layout_height="45dp"
            android:text="Sign Up" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="380dp"
            android:layout_height="45dp"
            android:layout_below="@+id/signupbtn"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/white"
            android:text="Sign In"
            android:textColor="@color/Medium_green"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
